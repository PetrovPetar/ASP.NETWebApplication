@model WebApplication.Models.Comment

@{
    ViewBag.Title = "Create";
}


@using (Html.BeginForm("Create", "Comments", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Comment</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-2">
                <strong>Текст</strong>
            </div>

            <div class="col-md-8">
                @Html.TextAreaFor(model => model.Text, new { htmlAttributes = new { @class = "form-control" }, @rows = 10 })
                @Html.ValidationMessageFor(model => model.Text, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-2">
                <strong>Автор</strong>
            </div>

            <div class="col-md-8">
                @Html.DisplayFor(model => model.Author.UserName, new { htmlAttributes = new { @class = "form-control" } })

                @User.Identity.Name
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2">
                Прикачен файл
            </div>
            <div class="col-md-8">
                <input type="file" name="file" id="file" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Изпрати" class="btn btn-default" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
<script src="//cdn.tinymce.com/4/tinymce.min.js"></script>
<script>tinymce.init({ selector:'textarea' });</script>
}
