
﻿@model WebApplication.Models.Comment

@{
    ViewBag.Title = "Delete";
   
}

<h3>Сигурни ли сте, че изкате да изтриете коментара?</h3>
<div>
   
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Име")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Author.FullName)
        </dd>

        <dt>
            @Html.DisplayName("Заглавие")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Post.Title)
        </dd>

        <dt>
            @Html.DisplayName("Съдържание")
        </dt>

        <dd>
            @Html.Raw(Model.Text)
        </dd>

    </dl>
    
    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Изтрий" class="btn btn-default" />
            @Html.ActionLink("Обратно", "Index")
        </div>
    }
</div>

