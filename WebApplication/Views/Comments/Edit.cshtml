
﻿@model WebApplication.Models.Comment

@{
    ViewBag.Title = "Edit";
   
   
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-2">
                <strong>Текст</strong>
            </div>

            <div class="col-md-8">
                
                @Html.TextArea("text", new { htmlAttributes = new { @class = "form-control" }, @rows = 10 })
                @Html.ValidationMessage("text", "", new { @class = "text-danger" })
            </div>
        </div>
        <input type="hidden" name="postId" id="postId" value="@Model.Post.Id" />
        <div class="form-group">
            <div class="col-md-2">
                <strong>Автор</strong>
            </div>

            <div class="col-md-8">
                @Html.DisplayFor(model => model.Author.UserName, new { htmlAttributes = new { @class = "form-control" } })

            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit"  value="Изпрати" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("Обратно", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="//cdn.tinymce.com/4/tinymce.min.js"></script>
    <script>tinymce.init({ selector:'textarea' });</script>
}

