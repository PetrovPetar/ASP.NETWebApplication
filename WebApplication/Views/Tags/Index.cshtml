
﻿@model List<WebApplication.Models.Tag>

@{
    ViewBag.Title = "Index";
    var tags = ViewBag.Tags;
}

<h2>Index</h2>

<table class="table">
    <tr>
        <th>
           Име на тага
        </th>
        <th>
           Брой постове
        </th>
       
    </tr>

@foreach (var item in tags) {
    <tr>
        <td>@Html.ActionLink((string)item.Name, "Details",
            "Tags", new { id = item.Id }, null)
           
        </td>
        <td>
            @item.Posts.Count();
      
        </tr>
}

</table>
