@model WebApplication.Models.Post
@{
    ViewBag.Title = "Details";

}

<h2>Детайли</h2>

<div>
    <h4>Post</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Заглавие
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
           Съдържание
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Body)
        </dd>

        <dt>
          Дата
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Date)
        </dd>

    </dl>
    <div class="btn btn-default">
        @Html.ActionLink("Коментар", "Create",
        "Comments", new { id = Model.Id }, null)
    </div>
</div>
<table class="authors-comments col-md-12">
    <tr>
        <th class="col-md-2">Автор</th>
        <th class="col-md-8">Коментар</th>
        <th class="col-md-2">Дата</th>
    </tr>
    @foreach (var comment in Model.Comments)
    {
        if (comment.Author != null)
        {
            <tr>
                <td>@comment.Author.UserName</td>
                <td>@comment.Text</td>
                <td>@comment.Date</td>
            </tr>
        }
        else
        {
            <tr>
                <td>Няма Автор!</td>
                <td>@comment.Text</td>
                <td>@comment.Date</td>
            </tr>
        }

    }
   
</table>
     
<p>
    @Html.ActionLink("Корекция", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Обратно към списъкът с публикации", "Index")
</p>
    